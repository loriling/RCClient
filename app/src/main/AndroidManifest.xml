        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- <activity android:name="com.elitecrm.rcclient.baidumap.BaiduLocationActivity" /> -->
        <activity android:name="com.elitecrm.rcclient.baidumap.BaiduLocationListActivity" />
